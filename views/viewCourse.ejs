<%- include('header.ejs') %>
<div style="width:50%;margin-left:20%;margin-top:2%;">
  <div class="card" style="width: 18rem; margin-left:25%">
  <div class="card-body">
  <h5 class="card-title"><%= course.title %></h5>
  <h6 class="card-subtitle mb-2 text-muted">Course</h6>
  <p class="card-text"><%= course.info %></p>
  <p class="card-text">Author:- <%= course.author.name %></p>
  <p class="card-text">Registered:- <%= course.registered.length %> users</p>
  <div style="display:flex;position:relative;">
  <form action="../getLessons" method="POST">
   <input type="text" name="id" value="<%= course._id %>" hidden>
   <button class="btn btn-outline-primary" type="submit">Lessons</button>
  </form>
  <% if(author){ %>

      <!-- Button to see who all registred for this course -->
    <button onclick="popup()" class="btn btn-primary" style="position:absolute;right:0;" type="submit">Users</button>
    <%}else{%>
      <form action="../registerForCourse" method="POST">
       <input type="text" name="id" value="<%= course._id %>" hidden>
       <button class="btn btn-outline-primary" type="submit" style="position:absolute;right:0;">Register</button>
      </form>
  <%}%>

</div>

</div>
</div>
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content" style="width:50%;">
    <span class="close">&times;</span>
    <% for(var k=0;k<course.registered.length;k++) { %>
    <div class="" style="display:flex;position:relative;">
      <div class="smallimg-div">
        <img class="small-img" src="http://localhost:3000/<%=course.registered[k].profileImage%>" alt="https://localhost:3000/<%=course.registered[k].profileImage%>">
      </div>
      <h6><%= course.registered[k].name%> </h6>
    </div>
    <%}%>
</div>

</div>
  </div>
  <script type="text/javascript">
    var modal = document.getElementById("myModal");
    var span = document.getElementsByClassName("close")[0];
    function popup(){
       modal.style.display = "block";
    }
    span.onclick = function() {
    modal.style.display = "none";
  }
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
  </script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
  </html>
