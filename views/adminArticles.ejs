<%- include('header.ejs') %>
<div style="width:50%;margin-left:20%;margin-top:3%;">

    <% for(let i=0;i<articles.length;i++){ %>
        <%  if(articles[i]){ %>
          <div class="card" style="width: 25rem; margin-left:25%">
  <div class="card-body">
   <a style="text-decoration:none;text-align:center;" href="/article/<%=articles[i]._id%>"><h3 class="card-title" > <%= articles[i].title %></h3></a>
   <h6 class="card-subtitle mb-2 text-muted" style="text-decoration:none;text-align:center;">Article</h6>
   <p class="card-text"><%= articles[i].content %></p>
   <div style="display:flex;position:relative;">
   <form action="adminArticles" method="post">
       <input type="text" name="id" value="<%= articles[i]._id %>" hidden>
       <button type="submit" name="val" value="no" class="btn btn-outline-danger">Cancel</button>
   </form>

   <form action="adminArticles" method="post">
       <input type="text" name="articleId" value="<%= articles[i]._id %>" hidden>
       <button type="submit" name="val" value="true" class="btn btn-outline-primary" style="position:absolute;right:0;"> Approve</button>
   </form>
  </div>

  </div>
  </div>
  <br>

         <% } %>

     <% } %>
   </div>
   <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
   </body>
   </html>
